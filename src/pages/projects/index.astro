---
import Layout from '../../layouts/main.astro';
import { getCollection } from 'astro:content';

// Fetch projects collection
const projects = await getCollection('projects');
---
<Layout 
  title="Projects | FRAM.DEV"
  description="Explore our portfolio of successful client projects. See how we've helped businesses across industries achieve their digital goals."
>
  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6">Our Projects</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map(project => (
        <a href={`/projects/${project.data.slug}`} class="block group">
          <div class="border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h2 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">{project.data.name}</h2>
            <p class="text-gray-600 dark:text-gray-300">{project.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout> 